########################################
# PROJECT METADATA
########################################
AUTHOR_ORG="Pemerintah Desa Mengwi"
AUTHOR_NAME="Mengwidev"

########################################
# APPLICATION SETTINGS
########################################
APP_NAME="Mengwi SmartGov"
APP_ENV=local         # Options: local, production, staging, etc
APP_KEY=              # Set this via `php artisan key:generate`
APP_DEBUG=true        # Debug mode (false in production)
APP_URL=http://localhost:1004

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4   # Only affects PHP's built-in server

BCRYPT_ROUNDS=12           # Password hashing strength

########################################
# LOGGING
########################################
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug            # Use 'error' or 'warning' in production

########################################
# DATABASE CONFIGURATION
########################################
DB_CONNECTION=sqlite       # For development; change to mysql/pgsql for production

# Uncomment for MySQL/PostgreSQL usage
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

########################################
# SESSION MANAGEMENT
########################################
SESSION_DRIVER=database    # Options: file, cookie, database, redis
SESSION_LIFETIME=120       # Minutes
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

########################################
# CACHING & QUEUEING
########################################
CACHE_STORE=database       # Options: file, database, redis, memcached
# CACHE_PREFIX=

QUEUE_CONNECTION=database  # Options: sync, database, redis, etc

########################################
# FILESYSTEM / STORAGE
########################################
FILESYSTEM_DISK=public      # Default disk for file storage

########################################
# BROADCASTING
########################################
BROADCAST_CONNECTION=log   # Options: pusher, redis, log, null

########################################
# REDIS CONFIG (if used)
########################################
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

########################################
# MEMCACHED (Optional)
########################################
MEMCACHED_HOST=127.0.0.1

########################################
# MAIL CONFIGURATION
########################################
MAIL_MAILER=log            # Options: smtp, sendmail, log, etc
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"

########################################
# AWS CONFIG (S3 STORAGE)
########################################
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

########################################
# VITE FRONTEND CONFIG
########################################
VITE_APP_NAME="${APP_NAME}"
