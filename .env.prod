########################################
# PROJECT METADATA
########################################
AUTHOR_ORG="Pemerintah Desa Mengwi"
AUTHOR_NAME="Mengwidev"

########################################
# APPLICATION SETTINGS
########################################
APP_NAME="Mengwi SmartGov"
APP_ENV=production                    # Set to 'production' for live deployment
APP_KEY=base64:***REPLACE_ME***      # Run `php artisan key:generate --show` and paste result
APP_DEBUG=false                       # Disable debug mode in production
APP_URL=https://yourdomain.com    # Replace with your live domain or IP

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

########################################
# PERFORMANCE & SECURITY
########################################
PHP_CLI_SERVER_WORKERS=8              # Optional tuning for built-in server
BCRYPT_ROUNDS=12                      # Acceptable for production

########################################
# LOGGING
########################################
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=single
LOG_LEVEL=warning                     # Recommended: error, warning, or critical

########################################
# DATABASE CONFIGURATION
########################################
DB_CONNECTION=mysql                   # Recommended: mysql or pgsql for production

DB_HOST=127.0.0.1                     # Replace with real DB host or service
DB_PORT=3306
DB_DATABASE=smartgov_db               # Replace with production DB name
DB_USERNAME=smartgov_user             # Replace with production DB username
DB_PASSWORD=***REPLACE_ME***          # Secure password here

########################################
# SESSION MANAGEMENT
########################################
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true                 # Enable encryption for extra security
SESSION_PATH=/
SESSION_DOMAIN=.yourdomain.com           # Cookie available for all subdomains

########################################
# CACHING & QUEUEING
########################################
CACHE_STORE=database                     # Redis is more performant in production, but for now let use database
# CACHE_PREFIX=smartgov_

QUEUE_CONNECTION=database                # Background job queueing

########################################
# FILESYSTEM / STORAGE
########################################
FILESYSTEM_DISK=public                    # Assume production uses AWS S3 or similar

########################################
# BROADCASTING (Optional)
########################################
BROADCAST_CONNECTION=log              # No broadcasting unless explicitly needed

########################################
# REDIS CONFIG
########################################
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null                  # Add password if Redis is secured
REDIS_PORT=6379

########################################
# MEMCACHED (Optional)
########################################
# MEMCACHED_HOST=127.0.0.1

########################################
# MAIL CONFIGURATION
########################################
MAIL_MAILER=smtp
MAIL_SCHEME=tls
MAIL_HOST=smtp.mailgun.org           # Replace with production mail server
MAIL_PORT=587
MAIL_USERNAME=***REPLACE_ME***        # Your SMTP username
MAIL_PASSWORD=***REPLACE_ME***        # Your SMTP password
MAIL_FROM_ADDRESS="noreply@mengwi.id"
MAIL_FROM_NAME="Mengwi SmartGov"

########################################
# AWS CONFIG (S3 STORAGE)
########################################
AWS_ACCESS_KEY_ID=***REPLACE_ME***
AWS_SECRET_ACCESS_KEY=***REPLACE_ME***
AWS_DEFAULT_REGION=ap-southeast-1     # Use closest region like Singapore
AWS_BUCKET=smartgov-bucket
AWS_USE_PATH_STYLE_ENDPOINT=false

########################################
# VITE FRONTEND CONFIG
########################################
VITE_APP_NAME="${APP_NAME}"
